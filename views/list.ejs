<%- include("header") -%>

    <body>
        <div class="box" id="heading">
            <h1>
                <%= listTitle %>
            </h1>
        </div>

        <div class="box">

            <% for(let i=0; i<taskInput.length && taskInput[i] !="" ; i++){ %>
                <div class="item">
                    <input type="checkbox">
                    <p>
                        <%= taskInput[i] %>
                    </p>
                    <form action="/delete" id="delete_<%= taskInput[i]%>" method="post">
                        <input type="hidden" name="item" value="<%= taskInput[i] %>">
                        <button
                            onclick="event.preventDefault();confirm('do you want to delete?')?document.getElementById('delete_<%= taskInput[i]%>').submit():d"
                            style="background-color: red;" class="buttond" type="submit" name="delete">
                            Delete
                        </button>
                    </form>
                </div>
                <%}%>


                    <form action="/" method="post">
                        <input autocomplete="off" type="text" name="taskInput" placeholder="Input task">
                        <button type="submit" class="buttonc" name="list" value=<%=listTitle %>>+</button>
                    </form>


        </div>

    </body>

    <%- include("footer") -%>

        </html>